{
  "name": "craftinginterpreters",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "jlox:build:watch": "chokidar \"packages/jlox/assembly\" -c \"npm run jlox:build:untouched\"",
    "jlox:build": "npm run jlox:build:untouched && npm run jlox:build:optimized",
    "jlox:build:untouched": "asc packages/jlox/assembly/index.ts --config packages/jlox/asconfig.json --target debug --exportRuntime --transform as-bind",
    "jlox:build:optimized": "asc packages/jlox/assembly/index.ts --config packages/jlox/asconfig.json --target release --exportRuntime --transform as-bind",
    "cli:build:watch": "chokidar \"packages/cli/assembly\" -c \"npm run cli:build:untouched\"",
    "cli:build": "npm run cli:build:untouched && npm run cli:build:optimized",
    "cli:build:untouched": "asc packages/cli/assembly/index.ts --config packages/cli/asconfig.json --target debug --exportRuntime --transform as-bind",
    "cli:build:optimized": "asc packages/cli/assembly/index.ts --config packages/cli/asconfig.json --target release --exportRuntime --transform as-bind",
    "cli:run": "chokidar \"packages/cli/build/untouched.wasm\" -c \"wasmtime packages/cli/build/untouched.wasm\""
  },
  "author": "",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@assemblyscript/loader": "^0.19.22",
    "as-bind": "^0.8.2",
    "as-wasi": "^0.4.6",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "assemblyscript": "^0.19.22",
    "ava": "^4.0.1",
    "chokidar-cli": "^3.0.0"
  }
}
